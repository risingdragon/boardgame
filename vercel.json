{
    "buildCommand": "npm run build",
    "outputDirectory": "public",
    "rewrites": [
        {
            "source": "/ads.txt",
            "destination": "/api/ads.js"
        },
        {
            "source": "/adsense-publisher",
            "destination": "/api/adsense-publisher.js"
        },
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ]
}